  translation       Json?
  desc              String?
  yield             Decimal?            @db.Decimal(10, 3)
  is_live           Boolean             @default(true)
  updated_at        DateTime            @updatedAt
  created_at        DateTime?           @default(now())
  recipe_detail_row recipe_detail_row[]
