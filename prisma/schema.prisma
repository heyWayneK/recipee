}

model dry_cooked_yields {
  id                              Int                           @id @default(autoincrement())
  name                            String
  translation                     Json?
  desc                            String?
  yield                           Decimal?                      @db.Decimal(10, 3)
  is_live                         Boolean                       @default(true)
  updated_at                      DateTime                      @updatedAt
