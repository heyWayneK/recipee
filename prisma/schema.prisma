model unit_type {
  // weight or fluid
  id          Int           @id @default(autoincrement())
  name        String
  desc        String?
  imperial    String?
  metric      String?
  ingredients ingredients[]
}

model unit_metric_imperial {
  // metric or imperial
  id         Int      @id @default(autoincrement())
  name       String   @unique
  is_default Boolean? @default(false)
