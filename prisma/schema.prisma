  confidence Decimal @db.Decimal(10, 3)
}

model todo_status {
  id         Int      @id @default(autoincrement())
  org        org      @relation(fields: [org_id], references: [id])
  org_id     String
  name       String
  todos      todo[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

