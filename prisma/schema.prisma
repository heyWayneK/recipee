model org {
  id                      Int                  @id @default(autoincrement())
  user_id                 String               @unique
  username                String?
  emails                  Json?
  phone_numbers           Json?
  organisations           String?
  avatar_url              String?
  roles                   Json?
  first_name              String?
  last_name               String?
  last_sign_in_at         String?
  json                    Json?
  // Are we using imperial or metric?
  unit_metric_imperial    unit_metric_imperial @relation(fields: [unit_metric_imperial_id], references: [id])
  unit_metric_imperial_id Int
  vat_number              String?

  country_locale        country_locale          @relation(fields: [country_locale_id], references: [id])
  country_locale_id     Int
  todo                  todo[]
  todo_document         todo_document[]
  conversation_thread   conversation_thread[]
  production_event      production_event[]
  production_event_task production_event_task[]
}

model brand {
  id          Int      @id @default(autoincrement())
  name        String
  logoSrc     String
  recipes     recipe[]
  customer    customer @relation(fields: [customer_id], references: [id])
  customer_id Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model markup {
  id             Int         @id @default(autoincrement())
  customer       customer    @relation(fields: [customer_id], references: [id])
  customer_id    Int
  name           String
  factor         Decimal     @db.Decimal(10, 3)
  markup_type    markup_type @relation(fields: [markup_type_id], references: [id])
  markup_type_id Int
  desc           String
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt
}

