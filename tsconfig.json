{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "preserve", // Ensure this is set for React/Next.js
    "module": "esnext",
    "moduleResolution": "node",
    // "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "noUnusedLocals": false,
    // "noUnusedParameters": false,
    "paths": {
      "@/*": ["./*"]
    },
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["src/*"]
    //   // "@/*": ["src/*"]
    // },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/office365mail/sendMail.js",
    ".next/types/app/recipee/formgen/page.tsx",
    "app/recipee/supabase_clerk_test",
    "cypress.config.js",
    // "jest__.config____.js"
    "jest.config.ts",
    "app/api/get-seed/route.ts"
  ],
  // "exclude": ["node_modules"]
  "exclude": ["node_modules"]
}
